{
  "manifest_version": 3,
  "name": "Mail Checker for Zoho",
  "version": "1.1.0",
  "description": "Get instant notifications when new Zoho Mail arrivesâ€”right in your browser toolbar",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://api.mailchecker.workers.dev/*"
  ],
  "action": {
    "default_title": "Mail Checker for Zoho",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://api.mailchecker.workers.dev/extension-bridge*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "callback.html"
      ],
      "matches": [
        "https://api.mailchecker.workers.dev/*"
      ]
    }
  ]
}