{
  "manifest_version": 3,
  "name": "Mail Checker for Zoho",
  "version": "1.0",
  "description": "Monitors unread counts for Zoho Mail via a secure backend",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://zoho-mail-backend-d4uw.onrender.com/*"
  ],
  "action": {
    "default_title": "Mail Checker for Zoho",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://zoho-mail-backend-d4uw.onrender.com/extension-bridge*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "callback.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "zoho-mail-counter@extensions.zoho.com",
      "strict_min_version": "109.0"
    }
  }
}